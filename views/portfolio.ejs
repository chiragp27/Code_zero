<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>portfolio</title>
</head>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400&display=swap');
body {
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    height: 100vh;
    background-color: #f5f5f5;
    font-family: 'Montserrat', sans-serif;
}

.parent{
    display: flex;

}

.img{
    margin-top: 4px;
}

.text-1{
    font-weight: 1000;
    font-size: 42px;
    background: -webkit-linear-gradient(43deg,#4158D0 0%, #C850C0 46%, #FFCC70 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    max-width: 37rem;
    display: inline-flex;
    margin: 0.7rem 1rem;
    word-spacing: 0.2rem;
    letter-spacing: 0.1rem;
}

.text-2{
    font-weight: 800;
    font-size: 24px;
    background: -webkit-linear-gradient(43deg,#4158D0 0%, #C850C0 46%, #FFCC70 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-left: 5.5rem;
    
}

.form-container {
    margin-top: 3rem;
    padding: 20px;
    position: absolute;
    top: 15%;
    left:23%;
    width: 100%;
    max-width: 900px;
}

.flex-container {
            display: flex;
            justify-content:flex-start;
            align-items: center;
        }

        
        .image-upload-container {
            margin-left: 350px;
            margin-bottom: 2.9rem;
        }


label {
    display: block;
    margin-bottom: 12px;
    font-weight: 900;
    font-size: 18px;
}

#title, #name, #content, #template, #keywords, #description  {
    width: 65%;
    padding: 20px;
    border: none;
    margin-bottom: 2rem;
    background: #e0e0e0;
  box-shadow: 15px 7px 30px #bebebe,
             -15px -7px 30px #ffffff;
    border-radius: 10px;
}


.upload-1{
    background-image: -webkit-linear-gradient(43deg,#bf79d8 0%, #9870a6 46%, #bf70ff 100%);
    color: white;
    width: 70%;
    text-align: left;
    font-size: 15px;
    font-weight: bold;
    padding: 6px 10px 6px 27px;
    margin-left: 4px;
    margin-top: 0.5rem;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.btn {
    background-image: -webkit-linear-gradient(43deg,#4158D0 0%, #C850C0 46%, #FFCC70 100%);
    color: white;
    width: 30%;
    font-size: 15px;
    font-weight: bold;
    padding: 10px 15px;
    margin-left: 18rem;
    border: none;
    border-radius: 15px;
    cursor: pointer;
}

.circle-btn {
    width: 50px;
    height: 50px;
    margin: 11px 0 0 10px;
    background-color: white;
    border: none;
    border-radius: 50%; 
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); 
    cursor: pointer;
    outline: none;
    position: relative;
    transition: transform 0.3s, box-shadow 0.3s;
}

.circle-btn:hover {
    transform: translateX(-2px); 
    box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.1); 
}

.circle-btn::before {
    content: ""; 
    position: absolute;
    width: 15px;
    height: 15px;
    background-color: #7c3cb8; 
    clip-path: polygon(100% 50%, 0% 0%, 0% 100%); 
    transform: rotate(181deg);
    top: 45%;
    left: 45%;
    margin-left: -7px; 
    margin-top: -5px; 
}



.project-list {
  display: grid;
  grid-template-columns: 270px 270px 270px;
  grid-auto-rows: 280px;
  gap: 30px;
  margin-bottom: 10px;
  margin-left: -2rem;
  padding: 0;
}


.project-item {
    position: relative;
    cursor: pointer;
    transition: transform 0.25s ease;
}

.project-item input[type="radio"] {
    position: absolute;
    opacity: 0;
    cursor: pointer;
}

.project-item:hover .project-img::before {
    background: hsla(0, 0%, 0%, 0.5);
}

.project-item:hover img {
    transform: scale(1.1);
}

.project-item:hover {
    transform: scale(1.05);
}

.project-item input[type="radio"]:checked + .project-img::before {
    background: hsla(0, 0%, 0%, 0.3);
}

.project-item input[type="radio"]:checked + .project-img img {
    transform: scale(1.05);
}


.project-img {
  position: relative;
  width: 100%;
  height: 200px;
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 15px;
}

.project-img::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1;
  transition: 0.25s ease;
}


.project-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition:0.25s ease;
}

.project-title
{ 
    margin-left: 45px; 
}

.project-title {
  color: hsl(0, 0%, 5%);
  font-size: 16px;
  font-weight: 500;
  text-transform: capitalize;
  line-height: 1.3;
  text-decoration: none;
}

.temp-container {
    /* margin-right: 10rem;
    padding-right: 2rem; */

}

.social {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.input-group {
    margin: 2rem 4rem 0 0;
}

.social1 {
    margin-top: 2rem;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.input-group1 {
    margin-right: 10rem;
}

.text-area {
    min-width: 135%; 
    height: auto; 
    max-height: 30px; 
}

 #res, #mail, #pronoun {
    width: 90%;
    padding: 20px;
    border: none;
    background: #e0e0e0;
  box-shadow: 15px 7px 30px #bebebe,
             -15px -7px 30px #ffffff;
    border-radius: 10px;
}

.specify {
    font-size: 14px;
}

#content {
    padding-bottom: 30px; /* Increase padding at the bottom */
    position: relative; /* Position relative to allow absolute positioning inside */
  }

  .input-placeholder {
    position: absolute;
    bottom: 50px;
    right: 290px;
    color: grey;
    pointer-events: none;
    font-size: 0.8em;
    display: block;
  }

  /* input[type="text"] {
    padding: 8px;
    padding-right: 80px; 
    width: calc(100% - 16px); 
    box-sizing: border-box; 
    position: relative;
  }

  input[type="text"]:focus + .input-placeholder,
  input[type="text"]:not(:placeholder-shown) + .input-placeholder {
    display: block;
  } */
</style>
    
</style>

<body>
    <div class="parent">
        <a href="landing"><button class="circle-btn"></button></a>
        <p class="text-1">Portfolios</p>
    </div>
    <p class="text-2">Eye-Catching Portfolio Designs!</p>

    <form action="/savePortfolio" method="POST" enctype="multipart/form-data">    <div class="form-container">
        <div class="flex-container">
            <div class="title-container">
                <label>Profession</label>
                <input type="text" id="title" style="width: 200%;" name="profession" required>
            </div>

            <div class="image-upload-container">
                <label>Select Image</label>
                <button id="trigger-upload-bg" class="upload-1">Add</button>
                <input type="file" id="upload-file-bg" name="background" accept="image/*" style="display: none;">
            </div>
        </div>

        <div class="flex-container">
            <div class="title-container">
                <label>Full Name</label>
                <input type="text" id="name" style="width: 240%;" name="name" required>
            </div>

            <div class="image-upload-container">
                <label>Pronounce</label>
                <input type="text" id="pronoun" name="pronounce">
            </div>
        </div>

        <div class="textarea-wrapper" style="position: relative;">
        <label>About</label>
            <textarea id="content" name="content" rows="7" cols="6"  oninput="limitCharacters()" placeholder=" " ></textarea>
            <span class="input-placeholder" id="char-count">0 / 600</span>
        </div>

        <div class="social">
            <div class="input-group">
                <label>Resume Link</label>
                <input type="text" id="res" name="resume">
            </div>
            <div class="input-group">
                <label>Email</label>
                <input type="text" id="mail" name="email" required>
            </div>

            <div class="input-group">
                <label>Select Logo <span class="specify">(80x80)</span></label>
                <button id="trigger-upload-logo" class="upload-1" style="width: 5.6vw;">Add</button>
                <input type="file" id="logo" name="logo" accept="image/*" style="display: none;">
            </div>
        </div>

        <div class="social1">
            <div class="input-group1">
                <label for="description">Short Description</label>
                <textarea id="description" name="description" class="text-area" placeholder="enter short description of the portfolio" cols="15" rows="5"  oninput="limitCharacters()" required></textarea>
            </div>

            <div class="input-group1">
                <label for="keywords">Keywords (comma-separated)</label>
                <input type="text" id="keywords" name="keywords" placeholder="enter keywords" required>
            </div>
        </div>

        <label style="margin-top: 1rem;">Select Template</label>
        <div class="temp-container">
            <ul class="project-list">

                <!-- optional  for loop -->
                <label class="project-item active">
                <input type="radio" name="landing_name" id="landing1" value="1" required>
                <figure class="project-img">
                    <img src="images/minimal.png" alt="page1" loading="lazy">
                </figure>
                <h3 class="project-title">Minimal</h3>
                </label>

                <label class="project-item active">
                <input type="radio" name="landing_name" id="landing2" value="2" required>
                <figure class="project-img">
                    
                    <img src="images/classic.png" alt="page2" loading="lazy">
                </figure>
                <h3 class="project-title">Classic</h3>
                </label>

                <label class="project-item active">
                    <input type="radio" name="landing_name" id="landing3" value="3" required>
                    <figure class="project-img">
                        
                        <img src="images/modern.png" alt="page3" loading="lazy">
                    </figure>
                    <h3 class="project-title">Modern</h3>
                    </label>
                <!--  -->

            </ul>
        </div>

        <button class="btn" type="submit">Generate!</button>
    </div>
</form>

<script>
    document.getElementById('trigger-upload-bg').addEventListener('click', function(event) {
        event.preventDefault();
        document.getElementById('upload-file-bg').click();
    });


    document.getElementById('upload-file-bg').addEventListener('change', function() {
        if (this.value) {
            alert('Background file selected!');
        }
    });

    document.getElementById('trigger-upload-logo').addEventListener('click', function(event) {
        event.preventDefault();
        document.getElementById('logo').click();
    });

    document.getElementById('logo').addEventListener('change', function() {
        if (this.value) {
            alert('Logo selected!');
        }
    });

    
 //limit and update count
 function limitCharacters() {
    var input = document.getElementById('content');
    var charCount = document.getElementById('char-count');
    var maxLength = 600;

    //update count
    charCount.textContent = input.value.length + " / " + maxLength;

    //trim val if exceeds
    if (input.value.length > maxLength) {
      input.value = input.value.substring(0, maxLength);
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
  limitCharacters(); //initialize count
});
</script>

</script>

</body>
</html>