<%  %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    <meta name="description" content="<%- desc %>">
    <meta name="keywords" content="<%- keywords %>">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Numans&display=swap');
        body {
            
            margin: 0;
            padding: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow-x: hidden;
        }
        /* header {
            background-color: #f5f5f5;
            padding: 20px;
            text-align: center;
        } */

        main {
            flex: 1;
            display: flex;
            padding: 0;
            height: 100%;
        }

        .logo
        {
            width: 190px;
            height: 90px;
            position: absolute;
            top: 4%;
            left: 4%;
        }

        #upload-image{
            
            display: flex;
            width: 100vh;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            justify-content: center; 
            align-items: center;    
            background-size: cover;  
            background-position: center;
            cursor: pointer;
        }

        .editable {
            border: none;
            outline: none;
            width: 95%;
        }

        .editable:hover {
            background-color: #f9f9f9;
            cursor: text;
        }

        .post-title {
            font-family: Montserrat, sans-serif;
            text-align: left;
            font-size: 48px;
            font-weight: bolder;
            font-weight: 900;
            top:0;
            position: absolute;
            top: 24%;
            left: 5%;
            max-width: 40vw;
            word-spacing: 3px;
            letter-spacing: 0.5px;
        }

        .center{
            margin-left: 1rem;
            
        }

        .post-content {
            margin-top: 1rem;
            position: absolute;
            top: 42%;
            left: 4%;
            font-size: 24px;
            line-height: 1.6;
            max-width: 40vw;
            text-align: left;
            margin-bottom: 3rem;
            white-space: pre-wrap; 
            font-family: 'Cormorant Garamond', serif;

        }

        .image-container {
            width: 100%;
            position: relative;
            display: inline-block;
            height: 100vh; 
        }

        .image-container img {
            display: block;
            width: 100%; 
        
        }

        .image-container::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%; 
            z-index: 1;
        }
        .left-section, .right-section {
            background-color: #F7F3EE;
            flex: 1.1;
            padding: 0px;
            /* border: 1px solid #e0e0e0; */
        }

        .prof {
        text-align: left;
        position: absolute;
        font-size: 28px;
        word-spacing: 1px;
        font-family: Montserrat, sans-serif;
        font-weight: 400;
        top: 33%;
        left: 5%;
        }

        .right-section {
            overflow: hidden;
        }

    .right-section {
        flex: 1;
        top: 0;
        /* border: 1px solid #e0e0e0; */
        display: flex;
        flex-direction: column;
        overflow-y: auto; 
    }

    .buttons {
    display: flex;
    justify-content: center;
    gap: 4rem;
}

.custom-button {
    background-color: #0c0c0c;
    color: azure;
    font-family: Montserrat, sans-serif;
    text-align: center;
    border: none;
    padding: 10px 65px;
    font-size: 16px;
    font-weight: 700;
    position: absolute;
    top: 69%;
    left: 5%;
    margin-top: 4rem;
    cursor: pointer;
    transition: transform 0.3s;
}

.custom-button:hover {
    transform: translateY(-7px);
}

    </style>
</head>

<body>
    <main>
        <div class="left-section">
            <div class="logo">
                <!-- logo image -->
                 <img src="data:<%= images[1].mimetype %>;base64,<%= images[1].buffer.toString('base64') %>" alt="<%= images[1].originalname %>" >
            </div>
     
                <h1 class="post-title " id="title"  onclick="stopPropagation(event)"><%= name  %></h1>
            
                <div class="prof">
                    <p><%= profession %><p>
                </div>

            <div class="scrollable-content">
                <p class="post-content editable center" id="content" contenteditable="true"><%= content %></p>
            </div>

            <div class="buttons">
                <a href="<%= email %>"><button class="custom-button">Book a Call</button></a>
            </div>

        </div>

        <div class="right-section">
            <div id="upload-image">
                <!-- image logic -->
                
                        <div class="image-container">
                            <img src="data:<%= images[0].mimetype %>;base64,<%= images[0].buffer.toString('base64') %>" alt="<%= images[0].originalname %>">
                         </div>   
            </div>
        </div>
    </main>

    <!-- <footer>
        <button id="save-btn" onclick="downloadPage()">Save Post</button>
    </footer> -->

    <script>

        function stopPropagation(e) {
        e.stopPropagation();
        }


        function downloadPage() {
        document.getElementById('save-btn').style.display = 'none';


        const entirePage = `<!DOCTYPE html>\n${document.documentElement.outerHTML}`;

        //convert the HTML string to a Blob
        const blob = new Blob([entirePage], { type: 'text/html' });

        //create a URL for the Blob
        const url = URL.createObjectURL(blob);

        //temporary anchor element and trigger a download
        const a = document.createElement('a');
        a.href = url;
        a.download = 'portfolio.html';
        a.click();

        // cleanup: revoke the blob URL
        URL.revokeObjectURL(url);
        }
    </script>
  </body>
</html>

